<h1>Productos</h1>

<div class="productos">
    {{#if products.length}} 
        {{#each products}}
            {{#each carts as |cart| }}
                <p>{{cart}}</p>
            {{/each}}
            <div class="card__product" id={{this._id}}>
                <p>titulo: {{this.title}}</p>
                <p>descripci√≥n: {{this.description}}</p>
                <p>code {{this.code}}</p>
                <p>price {{this.price}}</p>
                <p>status {{this.status}}</p>
                <p>stock {{this.stock}}</p>
                <p>category {{this.category}}</p>
                
                <button class="borrar">Borrar</button>
                <button class="modificar">Modificar</button>
                <button class="agregar">Agregar al carrito </button>

                <select name="carro">
                    <option value="">Elija un carro</option>
                    {{#each carts as |cart|}}
                        <option value="{{cart._id}}">{{cart._id}}</option>
                    {{/each}}
                </select>
            </div>
        {{/each}}
    {{else}}
        <p>No hay productos en la base de datos</p>
    {{/if}} 
</div>


